<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - philchute.com</title>
  <link rel="stylesheet" href="~/lib/bootstrap-5.3.3-dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-dark border-bottom mb-3" data-bs-theme="dark">
      <div class="container">
        <a class="navbar-brand" asp-area="" asp-page="/Index">philchute.com</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse d-sm-inline-flex flex-sm-row-reverse" id="navbarColor02">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link active" asp-area="" asp-page="/Index">Home
                <span class="visually-hidden">(current)</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" asp-area="" asp-page="/Games/Index">Games</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" asp-area="" asp-page="/Engines/Index">Engines</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" asp-area="" asp-page="/Links">Links</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" asp-area="" asp-page="/About">About</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <div class="container">
    <main role="main" class="pb-3">
      @RenderBody()
    </main>
  </div>

  <footer class="border-top footer text-muted">
    <div class="container">
      &copy; 2025 - Philip Chute - <a asp-area="" asp-page="/About">About</a>
    </div>
  </footer>

  @* <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap-5.3.3-dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script> *@

  @RenderSection("Scripts", required: false)
</body>
</html>
