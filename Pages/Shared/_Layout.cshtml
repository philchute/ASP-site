<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - philchute.com</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="~/css/timeline.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/lib/bootstrap-5.3.3-dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-dark border-bottom mb-3" data-bs-theme="dark">
      <div class="container">
        <a class="navbar-brand" asp-area="" asp-page="/Index">philchute.com</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse d-sm-inline-flex flex-sm-row-reverse" id="navbarColor02">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Home" ? "active" : "")" asp-area="" asp-page="/Index">Home
                <span class="visually-hidden">(current)</span>
              </a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMore" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Gaming
              </a>
              <ul class="dropdown-menu" aria-labelledby="navbarDropdownMore">
                <li><a class="dropdown-item @(ViewData["ActivePage"]?.ToString() == "Games" ? "active" : "")" asp-area="" asp-page="/Games/Index">Games</a></li>
                <li><a class="dropdown-item @(ViewData["ActivePage"]?.ToString() == "Engines" ? "active" : "")" asp-area="" asp-page="/Engines/Index">Engines</a></li>
                <li><a class="dropdown-item @(ViewData["ActivePage"]?.ToString() == "Maps" ? "active" : "")" asp-area="" asp-page="/Maps/Index">Maps</a></li>
                <li><a class="dropdown-item @(ViewData["ActivePage"]?.ToString() == "Servers" ? "active" : "")" asp-area="" asp-page="/Servers/Index">Servers</a></li>
              </ul>
            </li>
            <li class="nav-item">
              <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Years" ? "active" : "")" asp-area="" asp-page="/Years/Index">Years</a>
            </li>
            <li class="nav-item">
              <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Links" ? "active" : "")" asp-area="" asp-page="/Links/Index">Links</a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMore" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Philosophy
              </a>
              <ul class="dropdown-menu" aria-labelledby="navbarDropdownMore">
                <li><a class="dropdown-item @(ViewData["ActivePage"]?.ToString() == "Main Page" ? "active" : "")" asp-area="" asp-page="/Philosophy/Index">Main Page</a></li>
                <li><a class="dropdown-item @(ViewData["ActivePage"]?.ToString() == "Tractatus" ? "active" : "")" asp-area="" asp-page="/Tractatus/Index">Tractatus</a></li>
              </ul>
            </li>
            <li class="nav-item">
              <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Updates" ? "active" : "")" asp-area="" asp-page="/Updates/Index">Updates</a>
            </li>
            <li class="nav-item">
              <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "About" ? "active" : "")" asp-area="" asp-page="/About">About</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <div class="container">
    <main role="main" class="pb-3">
      @RenderBody()
    </main>
  </div>

  <footer class="border-top footer text-muted bg-dark" data-bs-theme="dark">
    <div class="container">
      &copy; 2025 - Philip Chute - <a class="link-secondary" asp-area="" asp-page="/About">About</a>
    </div>
  </footer>

  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap-5.3.3-dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>

  @RenderSection("Scripts", required: false)
</body>
</html>
