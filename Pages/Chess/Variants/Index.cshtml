@page
@model ASP_site.Pages.Chess.Variants.IndexModel
@{
    ViewData["Title"] = "Chess Variants";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-end mb-4">
        <div class="text-center flex-grow-1">
            <h1 class="display-4">Chess Variants</h1>
            <p class="lead">A family tree of chess variants.</p>
        </div>
        
        <form class="d-flex align-items-end" style="min-width: 300px;" method="get">
             <div class="input-group">
                <input class="form-control" type="text" name="SearchString" value="@Model.SearchString" placeholder="Search variants..." />
                <button class="btn btn-primary" type="submit">Search</button>
                @if (!string.IsNullOrEmpty(Model.SearchString))
                {
                    <a asp-page="./Index" class="btn btn-secondary">Clear</a>
                }
            </div>
        </form>
    </div>

    @if (!string.IsNullOrEmpty(Model.SearchString) && Model.SearchResults.Any())
    {
         <div class="container">
            <h3>Search Results</h3>
            <div class="list-group">
                @foreach (var v in Model.SearchResults)
                {
                    <a asp-page="./Variant" asp-route-id="@v.VariantID" class="list-group-item list-group-item-action bg-dark text-light border-secondary">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1 text-primary">@v.Name</h5>
                            <small>@v.Year</small>
                        </div>
                    </a>
                }
            </div>
        </div>
    }
    else
    {  
        <div class="evolution-graph-container position-relative p-4" style="min-height: 800px;">
            <svg id="connections-layer" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; pointer-events: none; z-index: 0;"></svg>
            
            <div id="nodes-layer" style="position: relative; z-index: 1;">
                @for (int i = 0; i < Model.Layers.Count; i++)
                {
                    var layer = Model.Layers[i];
                    var yearLabel = layer.First().Year ?? "Unknown";
                    if (layer.First().ParsedYear == 9999) yearLabel = "Unknown / Other";

                    <div class="d-flex align-items-center mb-4 layer-row" data-layer-index="@i">
                        <div class="year-label me-4 text-end fw-bold text-muted" style="min-width: 80px;">@yearLabel</div>
                        <div class="position-relative flex-grow-1" style="min-height: 80px;">
                            @foreach (var node in layer)
                            {
                                // XIndex is now a percentage (0-100)
                                var leftPos = node.XIndex; 
                                
                                <div class="card shadow-sm evolution-graph-node position-absolute" 
                                     id="node-@node.Id" 
                                     data-parents="@string.Join(",", node.ParentIds)"
                                     style="left: @(leftPos)%; transform: translateX(-50%); top: 0;">
                                    <div class="card-body p-2 text-center">
                                        <h6 class="mb-1">
                                            @if(node.IsArmy) {
                                                <a asp-page="/Chess/Armies/Army" asp-route-ArmyID="@node.Id" class="text-decoration-none text-info">@node.Name</a>
                                            } else {
                                                <a asp-page="./Variant" asp-route-id="@node.Id" class="text-decoration-none text-primary">@node.Name</a>
                                            }
                                        </h6>
                                        @if (node.IsArmy) { <span class="badge bg-info text-white" style="font-size:0.6em">Army</span> }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

<script src="~/js/evolution-graph.js"></script>
