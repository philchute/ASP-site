@page
@model ASP_site.Pages.Gundam.StatsModel
@{
    ViewData["Title"] = "Gunpla Stats";
}

<div class="container-fluid p-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 text-info">Database Stats</h1>
        <a asp-page="/Gundam/Dashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
    </div>

    <div class="row">
        <!-- Factions Column -->
        <div class="col-md-4">
            <div class="card bg-dark border-secondary mb-4">
                <div class="card-header border-secondary">
                    <h5 class="card-title text-white mb-0">Factions</h5>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        @foreach (var faction in Model.FactionCounts)
                        {
                            <li class="list-group-item bg-transparent text-white border-secondary d-flex justify-content-between align-items-center">
                                <span>@faction.Key</span>
                                <span class="badge bg-info rounded-pill text-dark">@faction.Value</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <!-- Gundams Column -->
        <div class="col-md-8">
            <div class="card bg-dark border-secondary">
                <div class="card-header border-secondary d-flex justify-content-between align-items-center">
                    <h5 class="card-title text-white mb-0">Gundams & Kit Counts</h5>
                    <span class="badge bg-secondary">@Model.GundamStats.Count Units</span>
                </div>
                <div class="card-body p-0">
                     <div class="table-responsive" style="max-height: 800px; overflow-y: auto;">
                        <table class="table table-dark table-hover table-sm mb-0">
                            <thead class="sticky-top bg-black">
                                <tr>
                                    <th>Model</th>
                                    <th>Name</th>
                                    <th class="text-center">Kits</th>
                                    <th>Factions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var stat in Model.GundamStats)
                                {
                                    <tr class="@(stat.KitCount == 0 ? "table-danger" : "")">
                                        <td class="font-monospace text-info">
                                            <a asp-page="/Gundam/Gundams/Details" asp-route-id="@stat.Gundam.ModelNumber" class="text-reset text-decoration-none">
                                                @stat.Gundam.ModelNumber
                                            </a>
                                        </td>
                                        <td>@stat.Gundam.CommonName</td>
                                        <td class="text-center fw-bold">@stat.KitCount</td>
                                        <td class="small text-muted">@string.Join(", ", stat.Gundam.Factions)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
