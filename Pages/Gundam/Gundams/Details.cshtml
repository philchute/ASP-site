@page "/gundam/gundam/{id}"
@model ASP_site.Pages.Gunpla.Gundams.DetailsModel
@using ASP_site.Helpers
@{
    ViewData["Title"] = Model.Gundam.CommonName;
}

<div class="container-fluid p-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
             <h1 class="display-4 text-info mb-0">@Model.Gundam.CommonName</h1>
             <div class="text-muted fs-5 mt-2">
                <span class="text-white font-monospace">@Model.Gundam.ModelNumber</span> 
                <span class="mx-2 text-secondary">|</span> 
                <span class="text-info">@GundamHelpers.GetTimeline(Model.Gundam.Series.FirstOrDefault())</span>
                @if (Model.Gundam.Factions.Any())
                {
                    <span class="mx-2 text-secondary">|</span>
                    <span class="text-white">@string.Join(", ", Model.Gundam.Factions)</span>
                }
                @if (Model.Gundam.Series.Any())
                {
                    foreach (var series in Model.Gundam.Series)
                    {
                        var fullName = GundamHelpers.GetSeriesFullName(series);
                        <span class="mx-2 text-secondary">|</span>
                        <span style="color: @GundamHelpers.GetSeriesColor(fullName); font-size: 1em; vertical-align: middle;" class="me-1">&#9632;</span>
                        <span class="text-muted">@fullName</span>
                    }
                }
             </div>
        </div>
        <div>
            <a asp-page="/Gundam/Dashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
        </div>
    </div>

    <div class="mb-5">
        <h5 class="text-secondary text-uppercase fs-6 mb-3">Description</h5>
        <p class="lead text-light mb-0">@Model.Gundam.Description</p>
    </div>

    <div class="d-flex align-items-center mb-4 border-bottom border-secondary pb-2">
        <h2 class="text-white mb-0 me-3">Available Kits</h2>
        <span class="badge bg-secondary rounded-pill">@Model.Kits.Count</span>
    </div>
    
    <div class="table-responsive">
        <table class="table bg-black text-white table-hover align-middle">
            <thead>
                <tr class="text-secondary small text-uppercase">
                    <th scope="col" class="text-center" style="width: 15%">Kit ID</th>
                    <th scope="col" class="text-center" style="width: 10%">Grade</th>
                    <th scope="col" class="text-center" style="width: 15%">Scale</th>
                    <th scope="col" style="width: 50%">Kit Name</th>
                    <th scope="col" class="text-center" style="width: 10%">Release</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var kit in Model.Kits)
                {
                    <tr class="table-row-link" style="cursor: pointer;" onclick="window.location='@Url.Page("/Gundam/Kits/Details", new { id = kit.Id })'">
                        <td class="text-center font-monospace text-info">@kit.Id</td>
                        <td class="text-center"><span class="badge bg-secondary">@kit.Grade</span></td>
                        <td class="text-center text-muted">@kit.Scale</td>
                        <td class="text-white fw-bold">@(kit.KitName ?? kit.Gundams.FirstOrDefault()?.CommonName ?? "Unknown")</td>
                        <td class="text-center">@kit.ReleaseYear</td>
                    </tr>
                }
            </tbody>
        </table>
        @if (!Model.Kits.Any())
        {
            <p class="text-muted text-center py-4">No kits found for this unit.</p>
        }
    </div>
</div>

<style>
    .table-row-link:hover td {
        background-color: #303030;
        color: #fff;
    }
</style>
