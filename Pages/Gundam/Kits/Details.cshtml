@page "/gundam/kit/{id}"
@model ASP_site.Pages.Gunpla.Kits.DetailsModel
@using ASP_site.Models.Gunpla
@using ASP_site.Helpers
@{
    ViewData["Title"] = $"{Model.Kit.Grade} {Model.Kit.Gundams.FirstOrDefault()?.CommonName}";
}

<div class="container-fluid p-0">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="display-5 text-info mb-0">
            <span class="badge bg-secondary fs-4 align-middle">@Model.Kit.Grade</span> 
            @(Model.Kit.KitName ?? Model.Kit.Gundams.FirstOrDefault()?.CommonName)
        </h1>
        <a asp-page="/Gundam/Dashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
    </div>
    
    <div class="row gx-5">
        <div class="col-md-6 mb-5">
            <h3 class="h4 text-info mb-4 border-bottom border-secondary pb-2">Specifications</h3>
            <ul class="list-group list-group-flush bg-transparent ps-0">
                <li class="list-group-item bg-transparent text-white border-secondary px-0 d-flex justify-content-between align-items-center">
                    <span class="text-muted">Kit ID</span>
                    <span class="font-monospace text-info fs-5">@Model.Kit.Id</span>
                </li>
                <li class="list-group-item bg-transparent text-white border-secondary px-0 d-flex justify-content-between align-items-center">
                    <span class="text-muted">Gundam Model</span>
                    <a asp-page="/Gundam/Gundams/Details" asp-route-id="@Model.Kit.Gundams.FirstOrDefault()?.ModelNumber" class="text-decoration-none text-info fs-5">
                        @Model.Kit.Gundams.FirstOrDefault()?.ModelNumber
                    </a>
                </li>
                <li class="list-group-item bg-transparent text-white border-secondary px-0 d-flex justify-content-between align-items-center">
                    <span class="text-muted">Series</span>
                    <span>
                        <span style="color: @GundamHelpers.GetSeriesColor(Model.Kit.Gundams.FirstOrDefault()?.Series.FirstOrDefault()); font-size: 1.2em; line-height: 1;" class="me-1">&#9632;</span>
                        <span class="fs-5">@(Model.Kit.Gundams.FirstOrDefault()?.Series.FirstOrDefault() ?? "-")</span>
                    </span>
                </li>
                <li class="list-group-item bg-transparent text-white border-secondary px-0 d-flex justify-content-between align-items-center">
                    <span class="text-muted">Scale</span>
                    <span class="fs-5">@Model.Kit.Scale</span>
                </li>
                <li class="list-group-item bg-transparent text-white border-secondary px-0 d-flex justify-content-between align-items-center">
                    <span class="text-muted">Release Year</span>
                    <span class="fs-5">@Model.Kit.ReleaseYear</span>
                </li>
                <li class="list-group-item bg-transparent text-white border-secondary px-0 d-flex justify-content-between align-items-center">
                    <span class="text-muted">Manufacturer</span>
                    <span class="fs-5">@Model.Kit.Manufacturer</span>
                </li>
                @if (Model.Kit.Designers.Any())
                {
                    <li class="list-group-item bg-transparent text-white border-secondary px-0 d-flex justify-content-between align-items-center">
                        <span class="text-muted">Designers</span>
                        <div class="text-end">
                            @foreach (var designer in Model.Kit.Designers)
                            {
                                <div class="fs-5">@designer</div>
                            }
                        </div>
                    </li>
                }
                @if (Model.Kit.Factions.Any())
                {
                    <li class="list-group-item bg-transparent text-white border-secondary px-0 d-flex justify-content-between align-items-center">
                        <span class="text-muted">Factions</span>
                        <div class="text-end">
                            @foreach (var faction in Model.Kit.Factions)
                            {
                                <div class="fs-5">@faction</div>
                            }
                        </div>
                    </li>
                }
            </ul>

            @if (Model.IncludedInKits.Any())
            {
                <div class="mt-4">
                    <h5 class="text-secondary text-uppercase fs-6 mb-3">Included In</h5>
                    <div class="list-group">
                        @foreach (var kit in Model.IncludedInKits)
                        {
                            <a asp-page="/Gundam/Kits/Details" asp-route-id="@kit.Id" class="list-group-item list-group-item-action bg-black text-white border-secondary d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="badge bg-secondary me-2">@kit.Grade</span>
                                    <span>@(kit.KitName ?? kit.Gundams.FirstOrDefault()?.CommonName ?? "Unknown")</span>
                                </div>
                                <small class="text-muted font-monospace">@kit.Id</small>
                            </a>
                        }
                    </div>
                </div>
            }

            @if (Model.IncludedKits.Any())
            {
                <div class="mt-4">
                    <h5 class="text-secondary text-uppercase fs-6 mb-3">Includes</h5>
                    <div class="list-group">
                        @foreach (var kit in Model.IncludedKits)
                        {
                            <a asp-page="/Gundam/Kits/Details" asp-route-id="@kit.Id" class="list-group-item list-group-item-action bg-black text-white border-secondary d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="badge bg-secondary me-2">@kit.Grade</span>
                                    <span>@(kit.KitName ?? kit.Gundams.FirstOrDefault()?.CommonName ?? "Unknown")</span>
                                </div>
                                <small class="text-muted font-monospace">@kit.Id</small>
                            </a>
                        }
                    </div>
                </div>
            }

            @if (Model.CombinesWith.Any())
            {
                <div class="mt-4">
                    <h5 class="text-secondary text-uppercase fs-6 mb-3">Combines With</h5>
                    <div class="list-group">
                        @foreach (var kit in Model.CombinesWith)
                        {
                            <a asp-page="/Gundam/Kits/Details" asp-route-id="@kit.Id" class="list-group-item list-group-item-action bg-black text-white border-secondary d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="badge bg-secondary me-2">@kit.Grade</span>
                                    <span>@(kit.KitName ?? kit.Gundams.FirstOrDefault()?.CommonName ?? "Unknown")</span>
                                </div>
                                <small class="text-muted font-monospace">@kit.Id</small>
                            </a>
                        }
                    </div>
                </div>
            }

            @if (Model.RemixedFrom.Any())
            {
                <div class="mt-4">
                    <h5 class="text-secondary text-uppercase fs-6 mb-3">Based On (Remix/Recolor)</h5>
                    <div class="list-group">
                        @foreach (var kit in Model.RemixedFrom)
                        {
                            <a asp-page="/Gundam/Kits/Details" asp-route-id="@kit.Id" class="list-group-item list-group-item-action bg-black text-white border-secondary d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="badge bg-secondary me-2">@kit.Grade</span>
                                    <span>@(kit.KitName ?? kit.Gundams.FirstOrDefault()?.CommonName ?? "Unknown")</span>
                                </div>
                                <small class="text-muted font-monospace">@kit.Id</small>
                            </a>
                        }
                    </div>
                </div>
            }

            @if (Model.RemixedInto.Any())
            {
                <div class="mt-4">
                    <h5 class="text-secondary text-uppercase fs-6 mb-3">Remixed Into</h5>
                    <div class="list-group">
                        @foreach (var kit in Model.RemixedInto)
                        {
                            <a asp-page="/Gundam/Kits/Details" asp-route-id="@kit.Id" class="list-group-item list-group-item-action bg-black text-white border-secondary d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="badge bg-secondary me-2">@kit.Grade</span>
                                    <span>@(kit.KitName ?? kit.Gundams.FirstOrDefault()?.CommonName ?? "Unknown")</span>
                                </div>
                                <small class="text-muted font-monospace">@kit.Id</small>
                            </a>
                        }
                    </div>
                </div>
            }

            @if (Model.PartSwaps.Any())

            {
                <div class="mt-4">
                    <h5 class="text-secondary text-uppercase fs-6 mb-3">Part Swaps</h5>
                    <div class="list-group">
                        @foreach (var kit in Model.PartSwaps)
                        {
                            <a asp-page="/Gundam/Kits/Details" asp-route-id="@kit.Id" class="list-group-item list-group-item-action bg-black text-white border-secondary d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="badge bg-secondary me-2">@kit.Grade</span>
                                    <span>@(kit.KitName ?? kit.Gundams.FirstOrDefault()?.CommonName ?? "Unknown")</span>
                                </div>
                                <small class="text-muted font-monospace">@kit.Id</small>
                            </a>
                        }
                    </div>
                </div>
            }

            @if (Model.Recolors.Any())
            {
                <div class="mt-4">
                    <h5 class="text-secondary text-uppercase fs-6 mb-3">Recolors</h5>
                    <div class="list-group">
                        @foreach (var kit in Model.Recolors)
                        {
                            <a asp-page="/Gundam/Kits/Details" asp-route-id="@kit.Id" class="list-group-item list-group-item-action bg-black text-white border-secondary d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="badge bg-secondary me-2">@kit.Grade</span>
                                    <span>@(kit.KitName ?? kit.Gundams.FirstOrDefault()?.CommonName ?? "Unknown")</span>
                                </div>
                                <small class="text-muted font-monospace">@kit.Id</small>
                            </a>
                        }
                    </div>
                </div>
            }

            @if (Model.Requires.Any())
            {
                <div class="mt-4">
                    <h5 class="text-secondary text-uppercase fs-6 mb-3">Requires</h5>
                    <div class="list-group">
                        @foreach (var kit in Model.Requires)
                        {
                            <a asp-page="/Gundam/Kits/Details" asp-route-id="@kit.Id" class="list-group-item list-group-item-action bg-black text-white border-secondary d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="badge bg-secondary me-2">@kit.Grade</span>
                                    <span>@(kit.KitName ?? kit.Gundams.FirstOrDefault()?.CommonName ?? "Unknown")</span>
                                </div>
                                <small class="text-muted font-monospace">@kit.Id</small>
                            </a>
                        }
                    </div>
                </div>
            }

            @if (Model.RequiredBy.Any())
            {
                <div class="mt-4">
                    <h5 class="text-secondary text-uppercase fs-6 mb-3">Required By</h5>
                    <div class="list-group">
                        @foreach (var kit in Model.RequiredBy)
                        {
                            <a asp-page="/Gundam/Kits/Details" asp-route-id="@kit.Id" class="list-group-item list-group-item-action bg-black text-white border-secondary d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="badge bg-secondary me-2">@kit.Grade</span>
                                    <span>@(kit.KitName ?? kit.Gundams.FirstOrDefault()?.CommonName ?? "Unknown")</span>
                                </div>
                                <small class="text-muted font-monospace">@kit.Id</small>
                            </a>
                        }
                    </div>
                </div>
            }

            @if (Model.RelatedAccessories.Any())
            {
                <div class="mt-4">
                    <h5 class="text-secondary text-uppercase fs-6 mb-3">Related Accessories</h5>
                    <div class="list-group">
                        @foreach (var acc in Model.RelatedAccessories)
                        {
                            <a asp-page="/Gundam/Kits/Details" asp-route-id="@acc.Id" class="list-group-item list-group-item-action bg-black text-white border-secondary d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="badge bg-secondary me-2">@acc.Grade</span>
                                    <span>@(acc.KitName ?? acc.Gundams.FirstOrDefault()?.CommonName ?? "Unknown")</span>
                                </div>
                                <small class="text-muted font-monospace">@acc.Id</small>
                            </a>
                        }
                    </div>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.Kit.Description))
            {
                <div class="mt-4">
                    <h5 class="text-secondary text-uppercase fs-6 mb-3">Description</h5>
                    <p class="text-light">@Model.Kit.Description</p>
                </div>
            }
        </div>

        <div class="col-md-6 mb-5">
            <h3 class="h4 text-info mb-4 border-bottom border-secondary pb-2">Collection Status</h3>
            <form method="post">
                <input type="hidden" asp-for="InputEntry.KitId" />
                
                <div class="mb-4">
                    <label class="form-label text-secondary small text-uppercase">Status</label>
                    <select asp-for="InputEntry.Status" class="form-select bg-black text-white border-secondary" asp-items="Html.GetEnumSelectList<KitStatus>()"></select>
                </div>

                <div class="mb-4">
                    <label class="form-label text-secondary small text-uppercase">Price Paid</label>
                    <div class="input-group">
                        <span class="input-group-text bg-secondary text-white border-secondary">$</span>
                        <input asp-for="InputEntry.PricePaid" class="form-control bg-black text-white border-secondary" type="number" step="0.01" />
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label text-secondary small text-uppercase">Notes</label>
                    <textarea asp-for="InputEntry.Notes" class="form-control bg-black text-white border-secondary" rows="3"></textarea>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2">Save Changes</button>
            </form>
        </div>
    </div>
</div>
